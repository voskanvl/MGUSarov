section.approach
    .approach__green-square.green-square.green-square--right-bottom
    .approach__back
    +splide("approach",approach)
        if(val.svgs)
            each svg in val.svgs
                img.interviews__svg(src=svg.img, style=`top:${svg.top?svg.top:"unset"}; left:${svg.left?svg.left:"unset"}; right:${svg.right?svg.right:"unset"}; bottom:${svg.bottom?svg.bottom:"unset"}; transform:${svg.transform?svg.transform:"unset"}; z-index:${svg.zIndex?svg.zIndex:"unset"}`)
        
        .approach__container.container
            .approach__slide.grid(style="height: 808px")
                .approach__left 
                    if(val.title) 
                        .approach__title.title= val.title
                    .approach__block
                        .approach__lead.lead!= val.lead 
                        each t in val.text
                            p.approach__text.text!= t
                .approach__right
                    each image in val.images 
                        .approach__image(style=`transform:${image.transform}; top:${image.top};right:${image.right};`)
                            img.approach__img(src=image.img) 
                        