section.interviews
    - const value = interviews[0]
    img.interviews__svg(src="../../../assets/svg/interview/left-vertical-lines.svg")
    .interviews__container.container
        .interviews__slide.grid
            .interviews__left 
                each image in value.images 
                    .interviews__image(style=`transform:${image.transform}; top:${image.top};left:${image.left};`)
                        img.interviews__img(src=image.img) 
            .interviews__right
                .interviews__lead.lead!= value.lead 
                .interviews__block
                    each t in value.text
                        p.interviews__text.text!= t